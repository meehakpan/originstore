<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".users.LoginActivity">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_shape">
        <ImageView
            style="@style/parent"
            android:background="@drawable/ic_login_bk" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Origin Store"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="@color/colorWhite"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="5dp"
        android:background="@drawable/shape_rec09">


        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="25sp"/>


    <EditText
        android:id="@+id/loginEmailEt"
        android:layout_below="@id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_rec02"
        android:hint="Email"
        android:padding="10dp"
        android:drawableStart="@drawable/mail_grey"
        android:drawablePadding="5dp"
        android:inputType="textEmailAddress"
        />


    <EditText
        android:id="@+id/loginPasswordEt"
        android:layout_below="@id/loginEmailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_rec02"
        android:hint="Password (Minimum 6 characters)"
        android:padding="10dp"
        android:drawableStart="@drawable/lock_grey"
        android:drawablePadding="5dp"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/forgotTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:text="Forgot Password"
        android:layout_below="@id/loginPasswordEt"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/loginBtn"
        android:text="Login"
        style="@style/Widget.AppCompat.Button.Colored"
        android:minWidth="120dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotTv" />


        <Button
            android:id="@+id/button_fb_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="#3F51B5"
            android:minWidth="120dp"
            android:padding="10dp"
            android:text="Facebook"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />


        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_fb_sign_in"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="37dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="20dp"
            android:background="#F44336"
            app:buttonSize="icon_only" />

        <TextView
        android:id="@+id/noAccountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not have account? Register "
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>
    </RelativeLayout>


</RelativeLayout>