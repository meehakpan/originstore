<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorBlack"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Order To" />
        <!--Shop name-->
        <TextView
            android:id="@+id/shopNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Order To" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrey00"/>

    </LinearLayout>

    <!--Show cart-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartItemsRv"
        android:layout_below="@id/ll1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:padding="5dp"
        tools:listitem="@layout/row_cartitem"
        android:layout_above="@id/promoR1"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/emptyCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorBlack"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_above="@id/promoR1"
        android:layout_marginBottom="80dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="Your Cart is Empty\n Continue Shopping" />



        <!--Promo Input Layout-->

        <RelativeLayout
            android:id="@+id/promoR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rec02"
            android:layout_margin="10dp"
            android:elevation="3dp"
            android:layout_above="@id/pricesLayout"
            android:padding="5dp">

        <TextView
            android:id="@+id/promoLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="Promotion Code"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/promoCodeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promoLabelTv"
            android:layout_toStartOf="@id/validateBtn"
            android:layout_marginEnd="5dp"
            android:hint="Promo Code"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrey02"
            android:textSize="14sp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/validateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/promoLabelTv"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:tint="@color/colorWhite"
                android:src="@drawable/send_primary"
                app:fabSize="mini"/>

            <TextView
                android:id="@+id/promoDescriptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/promoCodeEt"
                android:hint="Promo Code Description"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGrey02"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/applyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_below="@id/promoDescriptionTv"
                android:text="Apply"
                android:textColor="@color/colorWhite"

                />
        </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/pricesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrey00"/>
        <TextView
            android:id="@+id/sTotalLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Sub Total"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/sTotalTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="$10"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/discountLabelTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sTotalTv"
            android:padding="5dp"
            android:text="Discount"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/discountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sTotalTv"
            android:layout_alignParentEnd="true"
            android:text="$2.00"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/dFeeLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Delivery Fee"
            android:layout_below="@id/discountLabelTv"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/dFeeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="$12"
            android:textStyle="bold"
            android:layout_below="@id/discountTv"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/totalLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Total Price"
            android:layout_below="@id/dFeeLabelTv"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/totalTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="$22"
            android:textStyle="bold"
            android:layout_below="@id/dFeeLabelTv"
            android:layout_alignParentEnd="true"
            android:textColor="#FF0000"/>

        <Button
            android:id="@+id/checkoutBtn"
            android:layout_below="@id/totalTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:text="Confirm Order"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>


</RelativeLayout>